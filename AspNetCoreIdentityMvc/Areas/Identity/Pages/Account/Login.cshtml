@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<section class="py-4">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-center py-4">
                            <img src="~/handshake.png" alt="" height="100px" width="100px">
                        </div>
                        <div class="d-flex justify-content-center">
                            <a class="logo d-flex align-items-center w-auto">
                                <span class="d-none d-lg-block header">Welcome to Sogeti Ireland</span>
                            </a>
                        </div>
                        <form id="account" method="post">
                            @* <h2>Log in</h2> *@
                            <div class="pt-4 pb-2 info-text">
                                @*<h4 class="card-title text-center pb-0 fs-4">Welcome Back :)</h4>*@
                                <h5 class="text-center small">Please login to your account</h5>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                    aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                    aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3" style="display: none;">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"><i
                                        class="fa-solid fa-lock-open"></i> Log in</button>
                            </div>
                            <div class="text-muted  text-center mt-2">
                                <p>
                                    New to Sogeti Ireland <a href="/Identity/Account/Register">Sign up now</a>
                                </p>
                            </div>
                            <div>
                                @* <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p> *@
                                @* <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new
                                user</a>
                                </p>
                                <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
                                confirmation</a>
                                </p> *@
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
